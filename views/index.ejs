<html>
  <head>
    <title>Calculate Total Price</title>
    <style>
      body {
        background-color: #f8f9fa;
      }
      .container {
        max-width: 500px;
        margin: auto;
        padding: 30px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
        background-color:#FFB4B4;
        color:#002B5B;
      }
      h1 {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 20px;
      }
      label {
        display: block;
        margin-bottom: 10px;
        font-size: 18px;
        font-weight: bold;
      }
      input {
        padding: 10px;
        border-radius: 5px;
        border: none;
        margin-bottom: 20px;
        font-size: 16px;
      }
      button {
        background-color: #002B5B;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        border: none;
        font-size: 16px;
        cursor: pointer;
      }
      button:hover {
        background-color: #0052a5;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Calculate Total Price</h1>
      <form method="POST" action="/calculateTotalPrice">
        <label for="product">Product Name:</label>
        <input type="text" id="product" name="product" required>
        <label for="quantity">Quantity:</label>
        <input type="number" id="quantity" name="quantity" min="1" required>
        <button type="submit">Calculate Total Price</button>
      </form>
    </div>
  </body>
</html>
